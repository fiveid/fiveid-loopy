{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": ".",
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", "**/*.test.ts*"]
}
